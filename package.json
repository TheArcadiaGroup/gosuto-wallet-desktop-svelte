{
	"name": "gosuto-wallet",
	"version": "0.0.1",
	"private": true,
	"description": "Minimal Sveltekit + Electron starter template.",
	"main": "src/electron.cjs",
	"type": "module",
	"scripts": {
		"dev": "cross-env NODE_ENV=development npm run dev:all",
		"dev:all": "concurrently -n=svelte,electron -c='#ff3e00',blue \"npm run dev:svelte\" \"npm run dev:electron\"",
		"dev:svelte": "svelte-kit dev",
		"dev:electron": "electron src/electron.cjs",
		"build:svelte": "svelte-kit build",
		"build:all": "rm -rf dist && rm -rf release && cross-env NODE_ENV=production && npm run build:svelte && electron-builder -mwl --config build.config.json",
		"build:linux": "rm -rf dist && rm -rf release && cross-env NODE_ENV=production && npm run build:svelte && electron-builder -l --config build.config.json",
		"build:mac": "rm -rf dist && rm -rf release && cross-env NODE_ENV=production && npm run build:svelte && electron-builder -m --config build.config.json",
		"build:win": "rm -rf dist && rm -rf release && cross-env NODE_ENV=production && npm run build:svelte && electron-builder -w --config build.config.json",
		"start": "svelte-kit start",
		"prepare": "husky install"
	},
	"browserslist": [
		"Chrome 89"
	],
	"dependencies": {
		"electron-context-menu": "^3.1.1",
		"electron-serve": "^1.1.0",
		"electron-window-state": "^5.0.3"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "next",
		"@sveltejs/kit": "next",
		"@types/electron-window-state": "^2.0.34",
		"@typescript-eslint/eslint-plugin": "^5.4.0",
		"@typescript-eslint/parser": "^5.4.0",
		"autoprefixer": "^10.4.0",
		"concurrently": "^6.4.0",
		"cross-env": "^7.0.3",
		"cssnano": "^5.0.11",
		"dotenv": "^10.0.0",
		"electron": "^16.0.2",
		"electron-builder": "^22.14.5",
		"electron-connect": "^0.6.3",
		"electron-packager": "^15.4.0",
		"electron-reloader": "^1.2.1",
		"electron-updater": "^4.6.1",
		"eslint": "^8.3.0",
		"eslint-plugin-svelte": "^1.1.2",
		"husky": "^7.0.0",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.1",
		"prettier": "^2.5.0",
		"prettier-plugin-svelte": "^2.5.0",
		"pretty-quick": "^3.1.2",
		"sass": "^1.43.5",
		"svelte": "^3.44.2",
		"svelte-check": "^2.2.10",
		"svelte-preprocess": "^4.9.8",
		"tailwindcss": "^2.2.19",
		"typescript": "^4.5.2",
		"vite": "^2.6.14"
	}
}
